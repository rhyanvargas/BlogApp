<% include partials/header %>

<div class="ui text container segment">
  <div class="ui header huge">Edit: <%= post.title %></div>
  <form class='ui form' action="/blogs/<%=post._id%>?_method=PUT" method="POST">
    <div class="field">
      <label >Title</label>
      <input type="text" name="post[title]" value="<%= post.title %>">
    </div>
    <div class="field">
      <label >Image</label>
      <input type="text" name="post[image]" value="<%= post.image %>">
    </div>
    <div class="field">
      <label >Content</label>
      <textarea type="body" name="post[body]"><%= post.body %></textarea>
    </div>

    <button class="ui violet basic big button" type="submit">Create New Post</button>
  </form>
</div>



<% include partials/footer %>
